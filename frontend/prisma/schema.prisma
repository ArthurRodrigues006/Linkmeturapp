// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  phone     String?
  avatar    String?
  level     Int      @default(0)
  corpId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  corporation Corporation? @relation(fields: [corpId], references: [id])
  contacts    Contact[]

  @@map("users")
}

model Corporation {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  address     String?
  cnpj        String?  @unique
  description String?
  website     String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  users  User[]
  jobs   Job[]
  contacts Contact[]

  @@map("corporations")
}

model Job {
  id            String   @id @default(cuid())
  corpId        String
  name          String
  category      String
  subCategory   String?
  description   String
  minValue      Float
  maxValue      Float
  views         Int      @default(0)
  totalViews    Int      @default(0)
  videoUrl      String?
  certifications Json @default("[]")
  availability  Json @default("[]")
  published     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relacionamentos
  corporation Corporation @relation(fields: [corpId], references: [id])
  photos      JobPhoto[]

  @@map("jobs")
}

model JobPhoto {
  id      String @id @default(cuid())
  jobId   String
  url     String
  alt     String?
  createdAt DateTime @default(now())

  // Relacionamentos
  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("job_photos")
}

model Contact {
  id            String   @id @default(cuid())
  corpId        String
  userId        String?
  name          String
  email         String
  phone         String
  company       String?
  position      String?
  notes         String?
  blocked       Boolean  @default(false)
  saved         Boolean  @default(true)
  favorited     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relacionamentos
  corporation Corporation @relation(fields: [corpId], references: [id])
  user        User?       @relation(fields: [userId], references: [id])

  @@map("contacts")
}

model Notification {
  id        String   @id @default(cuid())
  corpId    String
  message   String
  read      Boolean  @default(false)
  type      String?
  link      String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notifications")
}