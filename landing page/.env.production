# Production Environment Variables for Render
# These should be configured in Render's dashboard

# Application Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Database (will be set by Render)
DATABASE_URL=

# Authentication (will be set by Render)
NEXTAUTH_URL=https://linkmetur-frontend.onrender.com
NEXTAUTH_SECRET=

# JWT
JWT_SECRET=

# API Configuration
NEXT_PUBLIC_API_URL=https://linkmetur-backend.onrender.com/api
NEXT_PUBLIC_FRONTEND_URL=https://linkmetur-frontend.onrender.com

# External APIs
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Email (configure in Render dashboard)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=

# Redis (if using external Redis service)
REDIS_URL=

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true