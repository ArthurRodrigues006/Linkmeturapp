// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Modelo de Corporação/Empresa
model Corporation {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  cnpj      String   @unique
  address   String?
  website   String?
  description String?
  logo      String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  users     User[]
  jobs      Job[]
  contacts  Contact[]

  @@map("corporations")
}

// Modelo de Usuário
model User {
  id           String      @id @default(cuid())
  email        String      @unique
  name         String
  password     String
  phone        String?
  level        Int         @default(1) // 1=user, 2=admin, 3=super_admin
  avatar       String?
  bio          String?
  active       Boolean     @default(true)
  emailVerified DateTime?
  
  // Relacionamento com corporação
  corporationId String?
  corporation   Corporation? @relation(fields: [corporationId], references: [id])
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relacionamentos
  contacts     Contact[]
  sessions     Session[]
  accounts     Account[]

  @@map("users")
}

// Modelo de Serviço/Job
model Job {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  minValue    Float?
  maxValue    Float?
  duration    String?  // ex: "2 horas", "1 dia"
  location    String?
  requirements String?
  benefits    String?
  views       Int      @default(0)
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  
  // Relacionamento com corporação
  corporationId String
  corporation   Corporation @relation(fields: [corporationId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  photos      JobPhoto[]
  applications JobApplication[]

  @@map("jobs")
}

// Fotos dos serviços
model JobPhoto {
  id     String @id @default(cuid())
  url    String
  alt    String?
  order  Int    @default(0)
  
  // Relacionamento com job
  jobId  String
  job    Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@map("job_photos")
}

// Candidaturas para serviços
model JobApplication {
  id        String   @id @default(cuid())
  message   String?
  status    String   @default("pending") // pending, accepted, rejected
  
  // Relacionamentos
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  applicantName  String
  applicantEmail String
  applicantPhone String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("job_applications")
}

// Modelo de Contato
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  message   String?
  favorited Boolean  @default(false)
  status    String   @default("new") // new, contacted, converted, archived
  
  // Relacionamentos
  corporationId String?
  corporation   Corporation? @relation(fields: [corporationId], references: [id])
  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

// Modelo para autenticação (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Modelo para configurações do sistema
model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String
  description String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// Modelo para categorias de serviços
model Category {
  id          String @id @default(cuid())
  name        String @unique
  description String?
  icon        String?
  color       String?
  active      Boolean @default(true)
  order       Int     @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}